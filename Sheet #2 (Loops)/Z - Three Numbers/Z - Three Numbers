#include <iostream>

using std::cin;
using std::cout;

int main()
{
    int K, S;
    cin >> K >> S;
    int count = 0;
    for (int x = 0; x <= K; x++)
    {
        for (int y = 0; y <= K; y++)
        {
            int z = S - x - y;
            if (z >= 0 && z <= K)
            {
                count++;
            }
        }
    }
    cout << count;
    
    return 0;
}
